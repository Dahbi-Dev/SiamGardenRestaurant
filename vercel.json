{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)\\.js$",
        "headers": {
          "Content-Type": "application/javascript"
        },
        "dest": "/index.html"
      },
      {
        "src": "/(.*)\\.css$",
        "headers": {
          "Content-Type": "text/css"
        },
        "dest": "/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }